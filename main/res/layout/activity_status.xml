<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/back"
    android:padding="5dp">

    <TextView
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:text="UNITS AVAILABLE"
        android:textStyle="bold"
        android:background="@drawable/searchedittext"
        android:textColor="#ffffff"
        android:singleLine="true"/>

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/aplus"
        android:gravity="left"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/status_text"
        android:layout_width="130dp"
        android:layout_height="100dp"/>

        <TextView
            android:background="@drawable/bloodtext"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="80dp"
            android:text="A+"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <TextView
        android:id="@+id/aminus"
        android:gravity="left"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/status_text"
        android:layout_marginLeft="150dp"
        android:layout_width="130dp"
        android:layout_height="100dp"/>

        <TextView
            android:background="@drawable/bloodtext"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="230dp"
            android:text="A-"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <TextView
        android:id="@+id/bplus"
        android:gravity="left"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/status_text"
        android:layout_below="@+id/aplus"
        android:layout_marginTop="20dp"
        android:layout_width="130dp"
        android:layout_height="100dp"/>

        <TextView
            android:background="@drawable/bloodtext"
            android:layout_below="@+id/aplus"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="80dp"
            android:text="B+"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <TextView
        android:id="@+id/bminus"
        android:gravity="left"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/status_text"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/aplus"
        android:layout_width="130dp"
        android:layout_height="100dp"/>

        <TextView
            android:background="@drawable/bloodtext"
            android:layout_below="@+id/aplus"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="230dp"
            android:text="B-"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <TextView
        android:id="@+id/abplus"
        android:gravity="left"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/status_text"
        android:layout_below="@+id/bplus"
        android:layout_marginTop="20dp"
        android:layout_width="130dp"
        android:layout_height="100dp"/>

        <TextView
            android:background="@drawable/bloodtext"
            android:layout_below="@+id/bplus"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="80dp"
            android:text="AB+"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <TextView
        android:id="@+id/abminus"
        android:gravity="left"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/status_text"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bminus"
        android:layout_width="130dp"
        android:layout_height="100dp"/>

        <TextView
            android:background="@drawable/bloodtext"
            android:layout_below="@+id/bplus"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="230dp"
            android:text="AB-"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <TextView
        android:id="@+id/oplus"
        android:gravity="left"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/status_text"
        android:layout_below="@+id/abplus"
        android:layout_marginTop="20dp"
        android:layout_width="130dp"
        android:layout_height="100dp"/>

        <TextView
            android:background="@drawable/bloodtext"
            android:layout_below="@+id/abplus"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="80dp"
            android:text="O+"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <TextView
        android:id="@+id/ominus"
        android:gravity="left"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/status_text"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/abminus"
        android:layout_width="130dp"
        android:layout_height="100dp"/>

        <TextView
            android:background="@drawable/bloodtext"
            android:layout_below="@+id/abplus"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="230dp"
            android:text="O-"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </RelativeLayout>

</RelativeLayout>